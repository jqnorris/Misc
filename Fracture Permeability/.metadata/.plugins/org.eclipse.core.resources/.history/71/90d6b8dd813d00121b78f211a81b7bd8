#include <iostream>
#include "DamageMatrix.h"

void damageMatrix(Pore & pore, Options & options)
{
	int a= options.latticeType*randKnuth();
	int i=0;
	int j=0;

	while(i==0)
	{
		while(j==0)
		{
			if ( pore.neighbors[a]->damage != 1)
			{
				pore.neighbors[a]->damage=1;
				j=1;
			}
			else
			{
				a= options.latticeType*randKnuth();
			};
		}
	}
}
