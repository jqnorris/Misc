#include "DamageMatrix.h"
#include "RandKnuth.h"
#include "Rock.h"

void damageMatrix(Pore & pore, Options & options)
{
	int a= 6*randKnuth();
	int i=0;

	while(i==0)
	{
		if ( pore.neighbors[a]->damage != 1)
		{
			pore.neighbors[a]->damage=1;
			i=1;
		}
		else
		{
			a= 6*randKnuth();
		};
	}
}
