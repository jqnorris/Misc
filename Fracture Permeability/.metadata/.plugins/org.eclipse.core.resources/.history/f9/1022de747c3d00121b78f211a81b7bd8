#include "Flow.h"
#include <cmath>

void flow(Rock & rock, Options & options)
{
	if(rock.damage!=0)
	{
		float deltaV=rock.pore1->currentVolume-rock.pore2->currentVolume;
		if(deltaV<0)
		{
			float flow=deltaV/2;
			rock.pore1->currentVolume=+flow;
			rock.pore1->currentVolume=-flow;
		}
	}
}

